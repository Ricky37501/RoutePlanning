<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        android:orientation="vertical">
        <TextView
            android:gravity="center_horizontal"
            android:text="@string/title"
            android:textColor="@color/colorTitle"
            android:textSize="35sp"
            android:layout_marginTop="50dp"
            android:shadowColor="@color/colorTitleShadow"
            android:shadowRadius="3"
            android:shadowDx="5"
            android:shadowDy="5"
            android:layout_height="50sp"
            android:layout_width="300dp" >
        </TextView>

        <EditText
            android:id="@+id/star_point"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLength="11"
            android:hint="@string/start_point"
            android:singleLine="true"
            android:autofillHints="出发地"
            android:inputType="textShortMessage"
            android:layout_marginTop="150dp">
        </EditText>

        <EditText
            android:layout_marginTop="20sp"
            android:id="@+id/end_point"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLength="11"
            android:hint="@string/end_point"
            android:singleLine="true"
            android:autofillHints="目的地"
            android:inputType="textShortMessage">
        </EditText>
        <Button
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:background="@drawable/ripple_btn_green"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40sp"
            android:textColor="@color/colorWhite"
            android:onClick="startSearch"
            >
        </Button>
    </LinearLayout>

</RelativeLayout>